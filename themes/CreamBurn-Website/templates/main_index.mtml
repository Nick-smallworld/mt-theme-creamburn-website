<head>
<mt:Include module="<__trans phrase="HTML Head">">
<title><mt:BlogName></title>
</head>

<body>

<div class="main">

<mt:Include module="<__trans phrase="Banner Header">">

    <div class="content">

    <div class="content_resize">

        <div class="mainbar">

<mt:SetVarBlock name="TopPageCount"><mt:Pages tag="@TOPPAGE"><mt:BlogPageCount></mt:Pages></mt:SetVarBlock>
<mt:If name="TopPageCount" ge="1">
    <mt:Pages tag="@TOPPAGE">
        <div class="article">
            <h2><mt:Pagetitle></h2><div class="clr"></div>
            <mt:PageBody>
            <p class="spec"><a href="<mt:PagePermaLink>" class="rm">Read more</a> &nbsp;|&nbsp; <span class="date"><mt:PageDate format="%B %e, %Y %I:%M %p"></span></p>
        </div>
    </mt:Pages>
<mt:Else>
    <mt:pages lastn="3">
        <div class="article">
            <h2><a href="<mt:pagePermaLink />"><mt:pageTitle /></a></h2><div class="clr"></div>
            <p><span class="date"><MTPageDate format="%B %e, %Y %I:%M %p"></span> &nbsp;|&nbsp Posted by <mt:If tag="AuthorURL"><a href="<mt:AuthorURL>"></mt:If><mt:pageAuthorDisplayName /><mt:If tag="AuthorURL"></a></mt:If></p>
            <mt:If tag="PageExcerpt"><mt:pageExcerpt><mt:Else><mt:pageBody></mt:If>
            <mt:If tag="pagemore"><p class="spec"><a href="<mt:pagePermaLink>" class="rm">Read more</a></p></mt:If>
        </div>
    </mt:pages>
</mt:If>

        </div>

        <div class="sidebar">

        <$mt:Include module="<__trans phrase="Sidebar">"$>

        </div>

        <div class="clr"></div>

    </div>

    </div>

<mt:Include module="<__trans phrase="Banner Footer">">
<mt:Include module="<__trans phrase="Footer">">

</div>

</body>

</html>